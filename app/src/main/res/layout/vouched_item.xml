<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_user"
        android:layout_marginLeft="10dp"
        android:id="@+id/person_image"
        android:tint="@color/colorPrimary" />

    <TextView
        android:id="@+id/name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/person_image"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="-11dp"
        android:layout_toEndOf="@+id/person_image"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold|italic"
        tools:text="Asha" />

    <TextView
        android:id="@+id/job_textView"
        android:layout_below="@id/name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/person_image"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        tools:text="textile merchant" />

    <TextView
        android:id="@+id/vouched_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/person_image"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="20dp"
        android:textSize="12sp"
        android:text="Vouched"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/vouched_amount_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="20dp"
        tools:text="$15"
        android:layout_alignParentEnd="true"
        android:textSize="30sp"
        android:layout_below="@id/vouched_amount"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/vouched_amount"
        android:id="@+id/star1"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-3dp"
        android:layout_toRightOf="@id/name_textView"
        android:src="@drawable/ic_star" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/vouched_amount"
        android:layout_marginLeft="4dp"
        android:id="@+id/star2"
        android:layout_marginTop="-3dp"
        android:layout_toRightOf="@id/star1"
        android:src="@drawable/ic_star" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/vouched_amount"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="-3dp"
        android:id="@+id/star3"
        android:layout_toRightOf="@id/star2"
        android:src="@drawable/ic_star" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/vouched_amount"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="-3dp"
        android:id="@+id/star4"
        android:layout_toRightOf="@id/star3"
        android:src="@drawable/ic_star" />

</RelativeLayout>